<body style="background-color: rgba(152, 193, 217, 1);">
<div id="afterBox"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="shareserver/afterBox.js"></script>
</div>
	<script id="header" src="/assets/header.js"></script>
    <div class="login-clean" style="background-color: rgba(152, 193, 217, 1);">
        <form action="/short" method="post" id="urlForm" style="background-color: rgb(52,52,52);">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="fas fa-link" style="color: rgb(230,94,94);"></i></div>
            <div class="form-group"><p style="color: rgb(230,94,94);">URL to shorten (Required):</p></div>
            <div class="form-group"><input type="url" id="URL" name="URL" placeholder="URL" autocomplete="off" inputmode="url" class="form-control" style="background-color: #00ced1;" /></div>
            <% if(!public) { %>
                <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password" id="password" style="background-color: #00ced1;"></div> 
            <% } %>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" style="background-color: rgb(230,94,94);">Shorten URL</button></div>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>